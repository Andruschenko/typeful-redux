{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        /* Additional Checks */
        /* "noUnusedLocals": true, */
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist/",
        "lib": ["es5", "dom", "es2015.promise"]
    },
    "files": [
        "src/index.ts"
    ]
}
