{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        /* Additional Checks */
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": ["es5"],
        // dtslint settings
        "baseUrl": ".",
        "paths": { "typeful-redux": ["../../src"] }
    }
}