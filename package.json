{
    "name": "typeful-redux",
    "version": "0.4.0-alpha-3",
    "description": "A typesafe, low boilerplate wrapper for redux to be used in TypeScript projects",
    "main": "dist/index.js",
    "types": "dist/typeful-redux.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/paulkoerbitz/typeful-redux"
    },
    "keywords": [
        "redux",
        "react",
        "typesafe",
        "typescript",
        "reducer"
    ],
    "author": "Paul Koerbitz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/paulkoerbitz/typeful-redux/issues"
    },
    "homepage": "https://github.com/paulkoerbitz/typeful-redux#readme",
    "peerDependencies": {
        "react": ">=15.0.0",
        "react-redux": "5.x",
        "redux": "^4.x"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/jest": "^22.2.2",
        "@types/react": "^16.4.11",
        "@types/react-dom": "^16.0.7",
        "chai": "^4.1.2",
        "dts-bundle-generator": "^1.6.1",
        "jest": "^22.4.3",
        "mocha": "^4.0.1",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-redux": "^5.0.7",
        "redux": "^4.x",
        "redux-thunk": "^2.3.0",
        "resolve-types": "^0.2.0",
        "ts-jest": "^22.4.2",
        "ts-node": "^3.3.0",
        "typedoc": "^0.9.0",
        "typescript": "^3.0.1",
        "webpack": "^4.16.5",
        "webpack-serve": "^2.0.2"
    },
    "scripts": {
        "build:typedef": "dts-bundle-generator -o dist/typeful-redux.d.ts --external-types redux react-redux -- dist/index.d.ts ",
        "build": "tsc && npm run build:typedef",
        "test": "jest",
        "typecheck": "tsc -w --noEmit",
        "prepare": "npm run build",
        "start:todomvc": "cd examples/todomvc && webpack-serve --config webpack.config.js"
    },
    "jest": {
        "testURL": "http://localhost/",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(test/.*|src/.*\\.test)\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {
        "@types/react-redux": "^6.0.6",
        "css-loader": "^1.0.0",
        "html-webpack-plugin": "^3.2.0",
        "style-loader": "^0.22.1",
        "todomvc-app-css": "^2.1.2",
        "ts-loader": "^4.5.0"
    }
}
